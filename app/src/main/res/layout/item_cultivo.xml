<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorSurface"
    app:strokeColor="@color/colorBorder"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCultivoImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del cultivo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNombreCultivo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nombre del Cultivo"
                    android:textColor="@color/textColorPrimary"                android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEstadoCultivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="4dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="4dp"
                    android:text="Activo"
                    android:background="@drawable/badge_background"
                    android:textColor="@color/white"                android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvDescripcionCultivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:maxLines="3"
                android:textColor="@color/textColorSecondary"
                android:text="DescripciÃ³n detallada del cultivo..." />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorBorder"  />

            <TextView
                android:id="@+id/tvZonaId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Zona ID: N/A"
                android:textColor="@color/textColorSecondary"/>
            <TextView
                android:id="@+id/tvTemperatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:text="ðŸŒ¡ï¸ Temp: 0Â°C - 0Â°C"
                android:textColor="@color/textColorSecondary"/>
            <TextView
                android:id="@+id/tvHumedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:text="ðŸ’§ Humedad: 0% - 0%"
                android:textColor="@color/textColorSecondary"/>
            <TextView
                android:id="@+id/tvFechas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:text="ðŸ“… Fecha Inicio - Fecha Fin"
                android:textColor="@color/textColorSecondary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@color/colorBorder"/>

            <TextView
                android:id="@+id/tvCosechada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cosechado: 0"
                android:textColor="@color/textColorSecondary"/>
            <TextView
                android:id="@+id/tvDisponible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Disponible: 0"
                android:textColor="@color/textColorSecondary"/>
            <TextView
                android:id="@+id/tvReservada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Reservado: 0"
                android:textColor="@color/textColorSecondary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/tvFechaCreacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Creado: N/A" />

            <TextView
                android:id="@+id/tvFechaActualizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="Actualizado: N/A" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>