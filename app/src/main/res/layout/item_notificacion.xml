<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorSurface">

    <LinearLayout
        android:id="@+id/layoutFondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ivIconoNotificacion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_notifications"
            app:tint="@color/colorAccent"
            android:contentDescription="Icono de notificación" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvTituloNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título de la Notificación"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"/>

            <TextView
                android:id="@+id/tvMensajeNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Este es el cuerpo del mensaje de la notificación."
                android:textColor="@color/textColorSecondary"/>

            <TextView
                android:id="@+id/tvTimestampNotificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Hace 5 minutos"
                android:textSize="12sp"
                android:textColor="@color/textColorSecondary"/>
        </LinearLayout>

        <View
            android:id="@+id/viewPuntoNoLeido"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/shape_unread_dot"
            android:layout_marginStart="8dp"
            android:visibility="gone"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>